generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  relationMode      = "prisma"
}

model User {
  id       String    @id @default(cuid())
  username String?   @unique
  role     String
  password Password?
}

model Password {
  id     String @id @default(cuid())
  userId String @unique
  pwd    String
  user   User   @relation(fields: [userId], references: [id])
}
